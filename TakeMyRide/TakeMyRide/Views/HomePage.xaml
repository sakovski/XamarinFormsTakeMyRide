<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TakeMyRide.ViewModels"
             BackgroundImage="background.jpg"
             x:Class="TakeMyRide.Views.HomePage">

    <ContentPage.BindingContext>
        <viewModels:OffersListViewModel />
    </ContentPage.BindingContext>

    <StackLayout HorizontalOptions="FillAndExpand">
        <Label Text="RideOffers"
               FontSize="Large"
               TextColor="White"
               BackgroundColor="Black"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               HeightRequest="40"
               HorizontalOptions="FillAndExpand"
               Opacity="0.75"
               VerticalOptions="Start" />
        <StackLayout Padding="2"
                     VerticalOptions="StartAndExpand">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListView x:Name="OffersListView"
                            ItemsSource="{Binding OffersList, Mode=TwoWay}"
                            SelectedItem="{Binding SelectedOffer, Mode=TwoWay}"
                            Grid.Row="0"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            SeparatorVisibility="Default"
                            SeparatorColor="Black">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Vertical" Opacity="0.75" BackgroundColor="WhiteSmoke" Margin = "0,3,0,3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Text="From:"
                                          FontSize="Micro"
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          HorizontalOptions="Start"
                                          VerticalOptions="Center" />
                                        <Label Text="{Binding StartCity}"
                                        TextColor="Black"
                                        Grid.Row="0"
                                        Grid.Column="1" />
                                        <Label Text="To:"
                                        FontSize="Micro"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />
                                        <Label Text="{Binding DestinationCity}"
                                        TextColor="Black"
                                         Grid.Row="1"
                                         Grid.Column="1" />
                                        <Label Text="{Binding DateOfStart, StringFormat='{0:dd-MM-yyyy hh:mm}'}"
                                        TextColor="Black"
                                        Grid.Row="0"
                                        Grid.Column="2" />
                                    </Grid>
                                </StackLayout>
                            </ViewCell>
                          
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </StackLayout>
        <StackLayout VerticalOptions="StartAndExpand">
            <Button Command="{Binding ShowMore, Mode=TwoWay}"
                    Text="Show more..."
                    TextColor="Black"
                    BackgroundColor="White" />
        </StackLayout>
    </StackLayout> 
</ContentPage>